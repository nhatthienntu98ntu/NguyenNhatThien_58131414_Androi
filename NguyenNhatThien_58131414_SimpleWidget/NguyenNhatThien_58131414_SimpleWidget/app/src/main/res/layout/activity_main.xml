<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên của bạn:"
        android:paddingLeft="5sp"/>

    <EditText
        android:id="@+id/edtName"
        android:hint="Nhập tên bạn vào đây"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày sinh:"
        android:paddingLeft="5sp"/>

    <EditText
        android:id="@+id/edtNgaySinh"
        android:hint="Nhập ngày sinh vào đây"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới tính:"
        android:paddingLeft="5sp"/>

        <RadioGroup
            android:id="@+id/rdgGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdbNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:checked="true"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rdbNu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nữ" />
        </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở thích của bạn:"
        android:paddingLeft="5sp"/>

    <CheckBox
        android:id="@+id/cbXemPhim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem phim"
        android:layout_marginLeft="25sp"/>

    <CheckBox
        android:id="@+id/cbNgheNhac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:text="Nge Nhạc" />

    <CheckBox
        android:id="@+id/cbCaPhe"
        android:layout_width="match_parent"
        android:layout_marginLeft="25sp"
        android:layout_height="wrap_content"
        android:text="Đi cafe với bạn bè" />

    <CheckBox
        android:id="@+id/cbONha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:text="Ở nhà một mình" />

    <CheckBox
        android:id="@+id/cbNauAn"
        android:layout_width="match_parent"
        android:layout_marginLeft="25sp"
        android:layout_height="wrap_content"
        android:text="Vào bếp nấu ăn" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở thích khác:"
        android:layout_marginLeft="20sp"
        android:paddingLeft="5sp"/>

    <EditText
        android:id="@+id/edtSoThichKhac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="20sp"
        android:hint="Nhập sở thích khác"
        android:textSize="20dp"
        android:inputType="textPersonName"
         />

    <Button
        android:id="@+id/btnXacNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="XÁC NHẬN" />
</LinearLayout>